{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "navigation.schema.json",
  "title": "Navigation Configuration",
  "description": "Site navigation structure for main menu and footer",
  "type": "object",
  "required": ["mainNav", "footerNav"],
  "properties": {
    "$schema": {
      "type": "string",
      "description": "JSON Schema reference"
    },
    "mainNav": {
      "type": "array",
      "description": "Main header navigation items",
      "items": {
        "$ref": "#/definitions/navItem"
      }
    },
    "footerNav": {
      "type": "object",
      "description": "Footer navigation sections",
      "properties": {
        "quickLinks": {
          "type": "array",
          "items": { "$ref": "#/definitions/footerLink" }
        },
        "resources": {
          "type": "array",
          "items": { "$ref": "#/definitions/footerLink" }
        },
        "getInvolved": {
          "type": "array",
          "items": { "$ref": "#/definitions/footerLink" }
        }
      }
    }
  },
  "definitions": {
    "navItem": {
      "type": "object",
      "required": ["id", "label", "href"],
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the nav item"
        },
        "label": {
          "type": "string",
          "description": "Display text for the nav item"
        },
        "href": {
          "type": "string",
          "description": "URL path for the nav item"
        },
        "i18nKey": {
          "type": "string",
          "description": "Translation key for internationalization"
        },
        "children": {
          "type": "array",
          "description": "Dropdown submenu items",
          "items": { "$ref": "#/definitions/navItem" }
        }
      }
    },
    "footerLink": {
      "type": "object",
      "required": ["label", "href"],
      "properties": {
        "label": {
          "type": "string",
          "description": "Display text"
        },
        "href": {
          "type": "string",
          "description": "URL or path"
        },
        "external": {
          "type": "boolean",
          "description": "Opens in new tab if true",
          "default": false
        }
      }
    }
  }
}
